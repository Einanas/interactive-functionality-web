<%- include('./partials/head') %>


<!-- <link rel="stylesheet" href="style.css"> -->
<h1>HOME</h1>

<section>
  <!-- elke item (cd, acitivity, book) -->
  <% items.forEach(item=> { %>
    <article>
      <div class="top">
        <!-- gelinkte afbeeldingen -->
        <img src="https://fdnd-agency.directus.app/assets/<%= item.afbeelding %>" alt="leesboek">
      </div>
      <div class="bottom">
        <h2>
          <!-- title van elke boek -->
          <a href="/boeken/<%=item.id%>">
            <%= item.title %>
          </a>
        </h2>
        <!-- Form voor opslaan knopje met svg -->
        <form method="post" action="/boeken/<%=item.id%>">
          <button name="savedItems">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
              <path d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32V224H48c-17.7 0-32 14.3-32 
                       32s14.3 32 32 32H192V432c0 17.7 14.3 32 32 32s32-14.3 32-32V288H400c17.7 0 32-14.3 
                       32-32s-14.3-32-32-32H256V80z" />
            </svg>
          </button>
        </form>

      </div>
    </article>
    <% }) %>
</section>

